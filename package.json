{
  "name": "helpscout-ticket-management",
  "version": "1.0.0",
  "description": "helpscout client application to manage the tickets",
  "main": "index.ts",
  "scripts": {
    "test": "jest --maxWorkers=1",
    "start": "ts-node index.ts",
    "noTicketAssignment": "ts-node index.ts --noTicketAssignment",
    "nodemon": "nodemon index.ts",
    "createTestZendeskTickets": "ts-node ./utilities/createTestTickets.ts",
    "updateDbShifts": "ts-node ./utilities/updateDBShiftsFromCSV.ts",
    "sendEmails": "ts-node ./utilities/sendEmailsToAgents.ts",
    "getZendeskTicketFields": "ts-node ./utilities/getZendeskTicketFields"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fszwedo/helpscout-ticket-management.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fszwedo/helpscout-ticket-management/issues"
  },
  "homepage": "https://github.com/fszwedo/helpscout-ticket-management#readme",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "axios": "^0.24.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "callsites": "^4.0.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "csv-parse": "^5.3.3",
    "csv-parser": "^3.0.0",
    "csv-stringify": "^6.2.3",
    "csv-writer": "^1.6.0",
    "date-fns": "^2.29.3",
    "dotenv": "^10.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "mk-json-2-csv": "^3.0.2",
    "moment": "^2.29.4",
    "mongoose": "^6.8.3",
    "pg-promise": "^11.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "yargs": "^17.6.2"
  },
  "engines": {
    "node": "14.x"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.15",
    "@types/jest": "^27.5.2",
    "@types/jsonwebtoken": "^8.5.9",
    "babel-jest": "^27.5.1",
    "jest": "^27.5.1",
    "nodemon": "^2.0.20",
    "ts-jest": "^27.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": "(test|spec)\\.(jsx?|tsx?)$",
    "coverageDirectory": "../Coverage",
    "collectCoverageFrom": [
      "./api/src/**"
    ],
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "babel-jest",
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(png)$": "jest-transform-stub"
    },
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "setupFilesAfterEnv": [
      "./test/setupTests.js"
    ]
  }
}
